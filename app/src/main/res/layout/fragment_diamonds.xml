<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.areeni.slidefortrix.DiamondsFragment">


    <ImageView
        android:id="@+id/DiamondsImage"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25"
        app:srcCompat="@drawable/ic_diamonds" />

    <SeekBar
        android:id="@+id/Dseek"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:max="28"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:progress="14"
        android:progressTint="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/team1D"
        app:layout_constraintEnd_toStartOf="@+id/team2D"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/team1D"
        app:layout_constraintTop_toBottomOf="@+id/team1D" />

    <TextView
        android:id="@+id/team1D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="48dp"
        android:minEms="2"
        android:text="@string/zero"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/DiamondsImage"
        app:layout_constraintTop_toBottomOf="@+id/DiamondsImage" />

    <TextView
        android:id="@+id/team2D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minEms="2"
        android:text="@string/zero"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/Dseek"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Dseek" />
</android.support.constraint.ConstraintLayout>
